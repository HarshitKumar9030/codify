PORT=8080
HOST=0.0.0.0
NODE_ENV=development

FRONTEND_URL=http://localhost:3000

MAX_CONCURRENT_EXECUTIONS=10
EXECUTION_TIMEOUT_MAX=30
CODE_SIZE_LIMIT=51200
INPUT_SIZE_LIMIT=10240
OUTPUT_SIZE_LIMIT=1048576

# Rate Limiting
RATE_LIMIT_POINTS=10
RATE_LIMIT_DURATION=60

# Cleanup Configuration
RESULT_TTL=300000
CLEANUP_INTERVAL=60000

# Docker Configuration (if using Docker for sandboxing)
DOCKER_ENABLED=false
DOCKER_IMAGE_PYTHON=python:3.11-alpine
DOCKER_IMAGE_NODE=node:20-alpine
DOCKER_MEMORY_LIMIT=128m
DOCKER_CPU_LIMIT=0.5

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

HEALTH_CHECK_INTERVAL=30000
